<div class="container">
  <h1>Status of delivery approval: "<%= params[:del_approv_status] %>"</h1>
    <% if current_user.location == @item_requests.first.request.location %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Request to</th>
              <th>Request from</th>
              <th>Request ID</th>
              <th>Item Request ID</th>
              <th>Type and ID</th>
              <th>Name</th>
              <th>Unit Price</th>
              <th>Group for delivery</th>
            </tr>
          </thead>
          <tbody>
            <% sorted_item_requests = @item_requests.sort_by { |item_request| Location.find(item_request.request.original_location_id).name } %>
            <% sorted_item_requests.each do |item_request| %>
                <td><%= item_request.request.location.name %></td>
                <td><%= Location.find(item_request.request.original_location_id).name %></td>
                <td><%= item_request.id %></td>
                <td><%= item_request.id %></td>
                <td><%= "#{item_request.item.class.to_s} #{item_request.item.id}" %></td>
                <td><%= item_request.item.name %></td>
                <% if item_request.item.is_a? Material %>
                  <td>$<%= item_request.item.unit_price %></td>
                <% else %>
                  <td>N/A</td>
                <% end %>

                <td>
                  <p>checkbox</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>


  <% end %>
</div>
