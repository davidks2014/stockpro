<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Include your CSS stylesheets and other head content -->
</head>
<body>
  <div class="login-wrapper">
    <!-- Your HTML/CSS template here -->
    <div class="bg-illustration">
      <div class="burger-btn">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
    <div class="login">
      <div class="container">
        <h1>Login to access your account</h1>
        <div class="login-form">
          <!-- Your Rails form here -->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          placeholder: "E-mail Address" %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" },
                          placeholder: "Password" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "LOG-IN" %> <br><br>
            </div>
          <% end %>
          <!-- End of Rails form -->
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <!-- Include your JavaScript and other footer content -->
</body>
</html>
