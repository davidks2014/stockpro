
<div class="container">
  <h1>Reconciliation Report</h1>
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Material ID</th>
        <th>Name</th>
        <th>Existing Unit Rate</th>
        <th>Existing Qty</th>
        <th>Stockcount qty</th>
        <th>shortfall(-) / excess(+)</th>
        <th>Cost Added(+) / Reduced(-)</th>
      </tr>
    </thead>
    <tbody>
      <% @location.materials.each do |material| %>
        <tr>
          <td><%= material.id %></td>
          <td><%= material.name %></td>
          <td><%= material.unit_price %></td>
          <td><%= material.qty %></td>
          <td><%= material.stockcounts.last.qty %></td>
          <td><%= material.stockcounts.last.diff %></td>
          <td><%= -material.stockcounts.last.diff * material.unit_price %></td>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Submit Report & Update Qty", location_update_stock_path(@location), method: :post, data: { turbo_method: :post }, class: "btn btn-primary" %>

  <%# need to jump to another page %>
</div>
